.user-edit-page
  .actions
    .nav.flex-column.nav-pills{"aria-orientation": "vertical", role: "tablist"}
      %a.nav-link.active{"aria-selected": "true", "data-toggle": "pill", href: "#v-pills-home", role: "tab"} Edit Profile
      %a.nav-link{"data-toggle": "pill"} Change Password
      %a.nav-link{"data-toggle": "pill"} Authorized Applications
      %a.nav-link{"data-toggle": "pill"} Email and SMS
      %a.nav-link{"data-toggle": "pill"} Manage Contacts
      %a.nav-link{"data-toggle": "pill"} Privacy and Security
      = link_to 'Log Out', destroy_user_session_path, method: :delete, class: "nav-link"
  .details.tab-content
    #v-pills-home.tab-pane.fade.show.active{"aria-labelledby": "v-pills-home-tab", role: "tabpanel"}
      = form_with model: current_user, local: true, html: {class: "form-horizontal form-edit-user"} do |f|
        .form-group.row
          .col-sm-3.col-form-label
            - if current_user.avatar.attached?
              = image_tag current_user.avatar, class: 'avatar'
          .col-sm-9
            %p.username= current_user.username
            %a.change-photo{href: ""} Change Profile Photo
        .form-group.row
          = f.label :avatar, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.file_field :avatar, class: 'form-control'
        .form-group.row
          = f.label :name, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :name, class: 'form-control'
        .form-group.row
          = f.label :username, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :username, class: 'form-control'
        .form-group.row
          = f.label :website, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :website, class: 'form-control'
        .form-group.row
          = f.label :bio, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_area :bio, class: 'form-control'
        .form-group.row
          = f.label :email, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :email, class: 'form-control'
        .form-group.row
          = f.label :phone, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :phone, class: 'form-control'
        .form-group.row
          = f.label :gender, class: 'col-sm-3 col-form-label'
          .col-sm-9
            = f.text_field :gender, class: 'form-control'
        .form-group.row
          .col-sm-3
          .col-sm-9
            = f.submit "Submit", class: 'btn btn-primary'
