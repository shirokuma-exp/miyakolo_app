              %time.date{datetime: "2020-03-09"} 2020.03.09
              %span.category.news NEWS
              %span.title NEWSを更新しました
          .info-section__container__left__inner__share
            %ul.info-section__container__left__inner__share__sns
              %li.info-section__container__left__inner__share__sns__tw
                %i.fa.fa-twitter
                %span Twitter
              %li.info-section__container__left__inner__share__sns__fb
                %i.fa.fa-facebook
                %span Facebook
              %li.info-section__container__left__inner__share__sns__gp
                %i.fa.fa-google-plus
                %span Google+
      .info-section__container__right
