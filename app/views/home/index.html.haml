.top
  = render "layouts/header"
%header.slide-header
  .inner
    .slideshow
      .slideshow-slides
        %a#slide-1.slide{href: "./"}= image_tag 'slide-1.jpg'
        %a#slide-2.slide{href: "./"}= image_tag 'slide-2.png'
        %a#slide-3.slide{href: "./"}= image_tag 'slide-3.jpg'
      .slideshow-nav
        %a.prev{href: "#"} Prev
        %a.next{href: "#"} Next
      .slideshow-indicator
  .wave-box
    .wave.-one
    .wave.-two
    .wave.-three
    .title
      MIYAKOL
      %span O
%div{role: "main"}
  %section.topics-section
    %h2.topics TOPICS
